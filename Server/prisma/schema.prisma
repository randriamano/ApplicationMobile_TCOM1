generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          Int      @id @default(autoincrement())
  name        String
  price       String
  description String?
  category    String?
  postedAt    DateTime @default(now())
  image       String
  buy         Buy[]
}

model Buy {
  id        Int      @id @default(autoincrement())
  product   Product  @relation(fields: [idProduct], references: [id])
  idProduct Int
  idClient  Int
  buyedAt   DateTime @default(now())
}

model Admin {
  id   Int    @id @default(autoincrement())
  name String
  key  String
}
