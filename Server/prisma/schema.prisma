generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  productId             Int       @id @default(autoincrement())
  productName           String
  productPrice          String
  productDescription    String?
  productCategory       String?
  availableColorList    String[]
  availableSizeList     String[]
  productRemainingStock Int
  productImageURLList   String[]
  productPostedDate     DateTime  @default(now())
  command               Command[]
}

model Command {
  commandId   Int      @id @default(autoincrement())
  product     Product  @relation(fields: [productId], references: [productId])
  student     Student  @relation(fields: [studentId], references: [studentId])
  productId   Int
  studentId   Int
  commandDate DateTime @default(now())
}

model Student {
  studentId        Int       @id @default(autoincrement())
  studentCardNum   String    @unique
  studentName      String
  studentFirstname String
  studentPassword  String
  command          Command[]
}

model Admin {
  adminId   Int    @id @default(autoincrement())
  adminName String
  adminKey  String
}
